<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fontFamily="@font/poppins_regular"
    android:paddingLeft="26dp"
    android:paddingRight="26dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:gravity="center"
        android:padding="20dp"
        android:layout_gravity="center"
        android:text="@string/create_account"
        android:textColor="@color/my_app_primary_variant_color"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/userSignUpName"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:drawableStart = "@drawable/user2"
        android:drawablePadding="5dp"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:hint="@string/username"
        app:cornerRadius="8dp"
        android:autofillHints="Sign Up" />

    <EditText
        android:id="@+id/userPasswd"
        android:layout_width="match_parent"
        android:drawablePadding="2dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"

        android:hint="@string/password"
        app:cornerRadius="8dp"/>

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:drawableStart = "@drawable/email1"
        android:drawablePadding="5dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:autofillHints="Email"

        android:hint="@string/email"

        app:cornerRadius="8dp"/>

    <EditText
        android:id="@+id/userAdd"
        android:layout_width="match_parent"
        android:drawableStart = "@drawable/home"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:hint="Address"
        android:autofillHints="Address"
        app:cornerRadius="8dp"/>

    <EditText
        android:id="@+id/userPhoneNum"
        android:layout_width="match_parent"
        android:drawableStart = "@drawable/phone"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:inputType="phone"

        android:hint="@string/phone_number"
        android:autofillHints="Phone Number"

        app:cornerRadius="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button

            android:id="@+id/signUpCancel"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="@string/cancel"
            android:backgroundTint="@android:color/background_light"
            android:textColor="@color/my_app_primary_variant_color"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/signUp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:backgroundTint= "@color/my_app_primary_variant_color"
            android:textColor="@android:color/background_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Sign Up"
            app:cornerRadius="8dp" />
    </LinearLayout>
</LinearLayout>